<h1>Tous les conseillers:</h1>

  <div class="row">
    <% @cocktails.each do |cocktail| %>
      <div class="col-xs-12 col-sm-4" id="pic">
        <div class="card">
            <%= cl_image_tag cocktail.photo, height: 250, width: 250, crop: :fill %>
            <h2><%= link_to cocktail.name, cocktail_path(cocktail) %></h2>
        </div>
      </div>
    <% end %>
  </div>
</div>

