<h1>Tous les conseillers:</h1>


<div class="container main-container">
  <div class="row">
    <div class="col-xs-6 col-sm-8">
      <div class="cards-container">
        <% @offers.each do |offer| %>
          <% if offer.photo.file.nil? %>
            <% url =  "https://images.unsplash.com/photo-1506967236291-3d3c4ad88abd?ixlib=rb-0.3.5&ixid=eyJhcHBfaWQiOjEyMDd9&s=8966dd3034be8631151ec07601acfa02&auto=format&fit=crop&w=2849&q=80"%>
          <% else %>
            <% url =  cl_image_path offer.photo, height: 300, width: 400, crop: :fill%>
          <% end %>
          <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.5), rgba(0,0,0,0.5)), url('<%= url %>')">
              <% if policy(offer).edit? %>
                <%= link_to "edit", edit_offer_path(offer), class: "btn btn-primary card-btn" %>
                <%= link_to offer_path(offer), method: :delete do %>
                  <i class="fa fa-trash-alt"></i>
                <% end %>
              <% end %>
              <div class="card-description">
              <h2><%= link_to offer.company_name, offer_path(offer) %></h2>
              <p><%= offer.description.first(70) %>...</p>
            </div>
          </div>
        <% end %>
      </div>
    </div>
    <div class="col-xs-6 col-sm-4 padding-left-0">
      <div id="map" ></div>
    </div>
  </div>
</div>
    <!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
  <!-- Latest compiled and minified JavaScript -->
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
  <!-- Gmaps JavaScript -->
  <script async defer
     src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCzER7O10ZOUp7FloJzMe2r8X1GIQhgt7Q&callback=initMap">
  </script>
  <script>
   function initMap() {
     // Create a map object and specify the DOM element for display.
     var map = new google.maps.Map(document.getElementById('map'), {
       center: {lat: 52.5206, lng: 13.4098},
       scrollwheel: false,
       zoom: 8
     });
   }
  </script>
