<h1>Tous les conseillers:</h1>


<div class="main-container">

  <div class="row">
    <% @offers.each do |offer| %>
      <div class="col-xs-12 col-sm-4" id="pic">

        <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.5), rgba(0,0,0,0.5)), url('https://kitt.lewagon.com/placeholder/cities/shanghai');">
            <%#= cl_image_tag cocktail.photo, height: 250, width: 250, crop: :fill %>

              <% if policy(offer).edit? %>
                <%= link_to "edit", edit_offer_path(offer), class: "btn btn-primary card-btn" %>
                <%= link_to offer_path(offer), method: :delete do %>

                  <i class="fa fa-trash-alt"></i>
                <% end %>
              <% end %>
              <div class="card-description">
              <h2><%= link_to offer.company_name, offer_path(offer) %></h2>
              <p><%= offer.description %></p>
          </div>
        </div>

      </div>
    <% end %>
  </div>

  <div id="map" ></div>
  <script>
       function initMap() {
         // Create a map object and specify the DOM element for display.
         var map = new google.maps.Map(document.getElementById('map'), {
           center: {lat: 52.5206, lng: 13.4098},
           scrollwheel: false,
           zoom: 8
         });
       }
  </script>
  </div>
    <!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
  <!-- Latest compiled and minified JavaScript -->
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
  <!-- Gmaps JavaScript -->
  <script async defer
     src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCzER7O10ZOUp7FloJzMe2r8X1GIQhgt7Q&callback=initMap">
  </script>
