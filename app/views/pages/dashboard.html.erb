
<div class="container main-container">
  <div class= dashboard-banner>
  <div class="">
      <h1 class="h1Wishlist">Ma Wishlist:</h1>
        <% if @offers.empty? %>
          <p>Vous n'avez liké aucune offre pour le moment...</p>
        <% else %>
          <% @offers.each do |offer| %>
            <div class="col-xs-12 col-sm-3">
              <ul><div class="wishlist card">
                <li class="title"><%=offer.company_name %></li>
                <li class="subtitle"><%=offer.address %></li>
                <li class="subtitle"><%=offer.price %> €</li>
                <li><%= link_to 'Revoir cette offre', offer_path(offer), :class => "btn btn-success" %></li>
                <i class="fas fa-heart"></i>
              </div></ul>
            </div>
          <% end %>
        <% end %>

      <h1 class="h1RDV">Mes rendez-vous:</h1>
    <div class="col-xs-12 col-sm-6">
        <% @bookings.each do |booking| %><h2>
      <div class="rdv">
            <h2 class="date"><%= booking.date %>
            <h2 class="name"><%= link_to booking.offer.company_name, offer_path(booking.offer) %></h2>
            <p class="desc"><%= booking.offer.description.first(70) %>...</p>
            <%= link_to offer_booking_path(booking.offer, booking), method: :delete do %>
              <i class="fa fa-trash-alt"></i>
            <% end %>
      </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

