
<div class="container main-container">
  <div class= dashboard-banner>
  <div class="">
      <h1 class="h1Wishlist">Ma Wishlist:</h1>
        <% if @offers.empty? %>
          <p>Vous n'avez liké aucune offre pour le moment...</p>
        <% else %>
          <% @offers.each do |offer| %>
            <div class="col-xs-12 col-sm-3">
              <ul><div class="wishlist card">
                <li class="title"><%=offer.company_name %></li>
                <li class="subtitle"><%=offer.address %></li>
                <li class="subtitle"><%=offer.price %> €</li>
                <li><%= link_to 'Revoir cette offre', offer_path(offer), :class => "btn btn-success" %></li>
                <i class="fas fa-heart"></i>
              </div></ul>
            </div>
          <% end %>
        <% end %>

      <h1 class="h1RDV">Mes rendez-vous:</h1>
    <div class="col-xs-12 col-sm-6">
      <div class="cards-container">
        <% @bookings.each do |booking| %>
          <% if booking.offer.photo.file.nil? %>
            <% url =  "https://images.unsplash.com/photo-1506967236291-3d3c4ad88abd?ixlib=rb-0.3.5&ixid=eyJhcHBfaWQiOjEyMDd9&s=8966dd3034be8631151ec07601acfa02&auto=format&fit=crop&w=2849&q=80"%>
          <% else %>
            <% url =  cl_image_path booking.offer.photo, height: 300, width: 400, crop: :fill%>
          <% end %>
          <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.5), rgba(0,0,0,0.5)), url('<%= url %>')">
                <%#= link_to "edit", edit_offer_path(booking), class: "btn btn-primary card-btn" %>
                <%= link_to offer_booking_path(booking.offer, booking), method: :delete do %>
                  <i class="fa fa-trash-alt"></i>
                <% end %>
              <div class="card-description">
                  <%=booking.date %>
              <h2><%= link_to booking.offer.company_name, offer_path(booking.offer) %></h2>
              <p><%= booking.offer.description.first(70) %>...</p>
            </div>
          </div>
        <% end %>
      </div>

    </div>
  </div>
</div>

