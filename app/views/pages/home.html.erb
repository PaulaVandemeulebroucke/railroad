<div class="wrapper">
  <div class="home-banner">
    <h2><strong>BIENVENUE SUR RAILROAD</strong></h2>
    <p>
        <span id="banner-typed-text";"></span>
    </p>

  <%# simple_form_for(@offer) do |f| %>
    <%#f.input :company_name, placeholder: 'company_name' %>
    <%# f.input :address, placeholder: 'address' %>
    <%# f.submit "Go", class: "btn btn-primary" %>
  <%# end %>

  <h2><%= link_to "Voir toutes les offres", offers_path, class: "btn btn-primary"%></h2>
</div>


<div class="wrapper" style="padding-bottom: 50px">
  <div class="container">
    <div id="cards-home">
      <div class="text-center">
        <h3 style="padding-bottom: 60px">DES CONSEILS SUR-MESURE</h3>
        <div class="row" style="padding-top: 30px, padding-bottom: 30px">
          <div class="col-sm-3 col-xs-6">
            <%= image_tag 'Artboard 10.svg', height: 80, width: 80, class: "grey"  %>
            <h4 style="padding-top: 10px">Un suivi adapté à chaque profil</h4>
