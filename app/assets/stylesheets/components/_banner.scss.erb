  height: 100vh;
  color: #eee;
  text-align: center;
  padding-top: 40vh;
  align-items: center;
  justify-content: center;
  opacity: 0.6;
}

.white-bold-title {
  font-weight: bold !important;
  color:white !important;
  font-size:30px;
}
