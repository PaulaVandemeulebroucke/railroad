.home-banner {
  background-image: linear-gradient(-225deg, rgba(0,0,0,0.5) 0%, rgba(0,30,0,0.5) 50%), url('https://images.unsplash.com/photo-1506967236291-3d3c4ad88abd?ixlib=rb-0.3.5&s=b1fea69b0b8f05bd104510e32fe666c5&auto=format&fit=crop&w=1498&q=80');
  background-size: cover;
  height: 100vh;
  color: #eee;
  justify-content: center;
  text-align: center;
  padding-top: 40vh;
  p {
    margin-bottom: 50px;
  }
  h2 {
    margin-bottom: 30px;
  }
}

.home-banner-create {
  background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), asset-url('create_back.jpg');
  background-size: cover;
  height: 100vh;
  color: #eee;
  text-align: center;
  padding-top: 40vh;
  align-items: center;
  justify-content: center;
  opacity: 0.6;
}

.white-bold-title {
  font-weight: bold !important;
  color:white !important;
  font-size:30px;
}
.card-banner{
  background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url(<%= asset_path('card.jpg') %>);
  background-size: cover;
  height: 120vh;
  color: #eee;
  text-align: center;
  padding-top: 5vh;
}

.card-banner-login{
  background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('https://images.unsplash.com/photo-1511832752475-638d191345e5?ixlib=rb-0.3.5&ixid=eyJhcHBfaWQiOjEyMDd9&s=0d69a2aa48c6eed28f94cc24b083cc09&auto=format&fit=crop&w=684&q=80');
  background-size: cover;
  height: 120vh;
  color: #eee;
  text-align: center;
  padding-top: 13vh;
}

.card-banner-signup {
  background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('https://images.unsplash.com/photo-1508389230194-725146b8da65?ixlib=rb-0.3.5&s=dac25d40350a532b6cd5b2fb6aaf1156&auto=format&fit=crop&w=334&q=80');
  background-size: cover;
  height: 120vh;
  color: #eee;
  text-align: center;
  padding-top: 13vh;
}

.card-banner-signup .row-form {
  display: flex;
  margin-top: 10px;
  font-size: 14px;
  .form-input-name {
    margin: 0px 10px;
  }
  .form-input-tel-and-mail {
    width: 100%;
    margin: 0px 10px;
  }
}

#sign-up-or-in {
  margin-bottom: 40px;
}

.dashboard-banner{
  background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url(<%= asset_path('dashboard.jpg') %>);
  background-size: cover;
  height: 320px;
  color: #eee;
  text-align: center;
}
.box {
  background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%);
  padding: 5px 50px;
  padding-bottom: 10px;
}

.photo-banner {
  height: 280px;
  background-size: cover;
  background-position: center;
  position: relative;
  align-items: center;
}

.photo-banner-content {
  position: absolute;
  bottom: 20px;
  left: 90px;
  color: white;
}
.col-margin {
  margin-top: 35px;
}

#offer-banner-title {
  font-size: 50px !important;
  color: white !important;
  padding-bottom: 20px !important;
}

#search-bar {
  box-shadow: none;
  box-sizing: border-box;
  font-size: 16px;
  border-radius: 10px;
  background-color: #f5f5f5;
  font-weight: 600;
  height: 100%;
  line-height: 20px;
  outline: none;
  width: 70%;
  transition: width 0.4s ease-in-out;
  &:focus {
    width: 100%;
  }
}

#white {
  color: white;
}

